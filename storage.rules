rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Gallery images - Read public, Write admin only
    match /gallery/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // All other files - Admin only
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
